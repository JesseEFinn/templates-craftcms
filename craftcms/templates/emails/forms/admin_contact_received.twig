---
name: 'Contact Form (Administrative)'
description: 'Sends notification to administrator.'
fromName: 'Admin'
fromEmail: ''
replyTo: '{email}'
cc: null
bcc: null
subject: 'Communication: {subject}'
includeAttachments: true
---
<div>

	<div style="width: 55%; height: 80px; padding: 2% 2% 2% 0; float: left; margin-bottom: 40px; position: relative;">
		<h3 style="margin: 0; font-size: 20px; font-family: Verdana, sans-serif; line-height: 20px; margin: 20px 0 10px 0; white-space: nowrap;">You've received a submission!</h3>
		<div style="font-size: 10px; font-family: Verdana, sans-serif; line-height: 10px; white-space: nowrap;">{{ date()|date('F dS, Y. h:i A [O]', locale.timezone) }}</div>
	</div>

	<div style="width: 32%; height: 80px; padding: 2%; float: right; margin-left: 1%; background-color: #F4F7F9">
		<h2 style="margin: 0 0 10px 0; font-size: 18px; line-height: 18px;">{name}</h2>

		<div style="color: #000000; font-size: 14px;">{email}</div>
		<div style="color: #000000; font-size: 14px;">{geoIP}</div>
		<div style="color: #000000; font-size: 14px;">{geoCity}, {geoRegion}. {geoCountry}</div>

	</div>
	
	<h1 style="clear: both; font-family: Verdana, sans-serif; font-size: 24px; line-height: 24px; margin: 40px 0">{subject}</h1>

	<div style="font-family: Helvetica, serif; font-size: 14px; color: #000000">{message}</div>

</div>